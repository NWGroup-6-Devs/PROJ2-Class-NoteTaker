<section id="add" class="container">
    <div class="form-wrap">

        <h1>Hey, Wendi here!</h1>
        <p>What are you working on today?</p>

        {{#each errors}}
        <div class="error">
            <p>{{text}}</p>
        </div>
        {{/each}}
        <form action="/notes/add" method="POST">
            <div class="input-group">
                <input type="text" name="title" id="title" class="input-box" placeholder="Subject/Title/Topic"
                    maxlength="100" value={{title}}>
            </div>
            <div class="input-group">
                <textarea name="description" id="description" class="input-box"
                    placeholder="Notes" rows="10">{{description}}</textarea>

            </div>
            <div class="input-group">
                <input type="email" name="contact_email" id="contactemail" class="input-box"
                    placeholder="Enter a contact email" value={{contact_email}}>
            </div>
            <input type="submit" value="Add Note" class="btn btn-reverse">

        </form>
    </div>
</section>